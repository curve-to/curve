  },
  "homepage": "https://github.com/realfrancisyan/curve#readme",
  "dependencies": {
    "koa": "^2.13.0",
    "koa-jwt": "^4.0.0",
    "koa-router": "^9.4.0",
    "mongoose": "^5.10.0"
  },
  "devDependencies": {
    "@types/jsonwebtoken": "^8.5.0",
    "@types/koa": "^2.11.4",
    "@types/koa-router": "^7.4.1",
    "@typescript-eslint/eslint-plugin": "^3.10.0",
    "@typescript-eslint/parser": "^3.10.0",
    "eslint": "^7.7.0",
